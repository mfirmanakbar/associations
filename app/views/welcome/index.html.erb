<br>
<h4>Rails Associations</h4>
<hr>

<div class="card">
    <div class="card-header"> belongs_to </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Team</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @developers.each do |d| %>
                        <tr>
                            <td><%= d.name %></td>
                            <td><%= d.team.team_name %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-offset-8">
            </div>
        </div>
    </div>
</div>

<hr>

<div class="card">
    <div class="card-header"> has_one </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Ticket Label</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @clients.each do |c| %>
                        <tr>
                            <td><%= c.name %></td>
                            <td><%= c.ticket.ticket_label %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-offset-8">
            </div>
        </div>
    </div>
</div>

<hr>

<div class="card">
    <div class="card-header"> has_one :through </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center"><th colspan="3">Supplier Model</th></tr>
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Code Number</th>
                            <th>Activity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @suppliers.each do |s| %>
                        <tr>
                            <td> <%= s.name %> </td>
                            <td> <%= s.account.code_number %> </td>
                            <td> <%= s.account.account_history.activity %> </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center"><th colspan="3">Account Model</th></tr>
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Code Number</th>
                            <th>Activity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @accounts.each do |a| %>
                        <tr>
                            <td> <%= a.supplier.name %> </td>
                            <td> <%= a.code_number %> </td>
                            <td> <%= a.account_history.activity %> </td>            
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center"><th colspan="3">Account History Model</th></tr>
                        <tr class="text-center">
                            <th>Name</th>
                            <th>Code Number</th>
                            <th>Activity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @account_histories.each do |ah| %>
                        <tr>
                            <td> <%= ah.account.supplier.name %> </td>
                            <td> <%= ah.account.code_number %> </td>
                            <td> <%= ah.activity %> </td>            
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<hr>

<div class="card">
    <div class="card-header"> has_many </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center"><th colspan="2">Author Model</th></tr>
                        <tr class="text-center">
                            <th>Author</th>
                            <th>Books List</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @authors.each do |a| %>
                        <tr>
                            <td><%= a.name %></td>
                            <td>
                                <ul>
                                <% a.books.each do |b| %>
                                    <li><%= b.book_title %></li> 
                                <% end %>
                                </ul>                                
                            </td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-lg-4">
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr class="text-center"><th colspan="2">Book Model</th></tr>
                        <tr class="text-center">
                            <th>Author</th>
                            <th>Books Title</th>
                        </tr>
                    </thead>
                    <tbody>
                    <% @books.each do |b| %>
                        <tr>
                            <td><%= b.author.name %></td>
                            <td><%= b.book_title %></td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
            </div>
            <div class="col-offset-4">
            </div>
        </div>
    </div>
</div>

<hr>

